---
import type {
  AttributorData,
  SocialImageMetadata,
  TwitterCardType,
} from 'types';
import BaseLayout from '@layouts/BaseLayout.astro';
import MainWrapper from '@layouts/MainWrapper.astro';

import SkipToContentButton from '@components/SkipToContentButton.astro';
import Navbar from '@components/Navbar.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

interface Props {
  title?: string;
  titleSuffix?: string;
  description?: string;
  tags?: string[];
  author?: AttributorData;
  ogImage?: SocialImageMetadata;
  twitterImage?: SocialImageMetadata;
  twitterCardType?: TwitterCardType;
  twitterUsername?: string;
  isPageIndexed?: boolean;
}

const {
  title,
  titleSuffix,
  description,
  tags,
  author,
  ogImage,
  twitterImage,
  twitterCardType,
  twitterUsername,
  isPageIndexed,
} = Astro.props;
---

<BaseLayout
  title={title}
  titleSuffix={titleSuffix}
  description={description}
  tags={tags}
  author={author}
  ogImage={ogImage}
  twitterImage={twitterImage}
  twitterCardType={twitterCardType}
  twitterUsername={twitterUsername}
  isPageIndexed={isPageIndexed}
>
  <SkipToContentButton />
  <Navbar />
  <Header title="Page header" />
  <MainWrapper>
    <slot />
  </MainWrapper>
  <Footer />
</BaseLayout>
