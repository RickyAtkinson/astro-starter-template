---
import type {
  AttributorData,
  SocialImageMetadata,
  TwitterCardType,
} from 'types';
import BaseLayout from '@layouts/BaseLayout.astro';
import MainWrapper from '@layouts/MainWrapper.astro';

import SkipToContentButton from '@components/SkipToContentButton.astro';
import Navbar from '@components/Navbar.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

interface Props {
  pageTitle?: string;
  pageTitleSuffix?: string;
  description?: string;
  tags?: string[];
  author?: AttributorData;
  ogImage?: SocialImageMetadata;
  twitterImage?: SocialImageMetadata;
  twitterCardType?: TwitterCardType;
  twitterUsername?: string;
  isPageIndexed?: boolean;
  headerTitle: string;
}

const {
  pageTitle,
  pageTitleSuffix,
  description,
  tags,
  author,
  ogImage,
  twitterImage,
  twitterCardType,
  twitterUsername,
  isPageIndexed,
  headerTitle,
} = Astro.props;
---

<BaseLayout
  pageTitle={pageTitle}
  pageTitleSuffix={pageTitleSuffix}
  description={description}
  tags={tags}
  author={author}
  ogImage={ogImage}
  twitterImage={twitterImage}
  twitterCardType={twitterCardType}
  twitterUsername={twitterUsername}
  isPageIndexed={isPageIndexed}
>
  <SkipToContentButton />
  <Navbar />
  <Header title={headerTitle} />
  <MainWrapper>
    <slot />
  </MainWrapper>
  <Footer />
</BaseLayout>
